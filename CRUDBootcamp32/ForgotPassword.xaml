        <Label x:Name="UserForgotPasswordName" Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="41,236,0,0"/>
        <Label x:Name="UserForgotPasswordEmail" Content="Email" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="43,285,0,0" RenderTransformOrigin="-2.711,6.077"/>
        <TextBox x:Name="TxtNameUserForgotPassword" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="116,233,0,0"/>
        <TextBox x:Name="TxtEmailUserForgotPassword" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="117,273,0,0"/>
        <Button x:Name="BtnSubmitForgotPassword" Content="Submit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="121,345,0,0" Click="BtnSubmitForgotPassword_Click"/>-->
    </Grid>
</Window>
